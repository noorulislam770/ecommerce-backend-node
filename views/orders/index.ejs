<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>eCommerce App</title>
    <!-- Tailwind CSS via CDN -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-100">
    <!-- Navbar -->
    <%- include('../nav'); %>

    <div class="container mx-auto my-8">
        <h1 class="text-3xl font-semibold mb-4">Your Orders</h1>

        <% if (orders.length === 0) { %>
        <p class="text-gray-600">You have no orders. <a href="/products" class="text-blue-500">Start Shopping</a></p>
        <% } else { %>
        <ul class="bg-white shadow-md rounded">
            <% orders.forEach(order => { %>
            <li class="border-b px-4 py-2">
                <h2 class="text-lg font-semibold">Order #<%= order.id %> - <%= order.status %></h2>
                <p class="text-gray-600">Placed on: <%= order.created_at %></p>
                <p class="text-gray-600">Total: $<%= order.total %></p>
            </li>
            <% }) %>
        </ul>
        <% } %>




        <footer class="bg-gray-800 text-white text-center py-4">
            <p>&copy; 2024 eCommerce App</p>
        </footer>
</body>

</html>