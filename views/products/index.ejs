<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>eCommerce App</title>
    <!-- Tailwind CSS via CDN -->
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>

<body class="bg-gray-100">
    <!-- Navbar -->
    <%- include('../nav'); %>

    <div class="container mx-auto my-8">
        <h1 class="text-3xl font-semibold mb-4">Product List</h1>

        <!-- Add product button (for admin) -->

        <!-- Product list -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
            <% products.forEach(product => { %>
            <div class="bg-white p-4 shadow-md rounded">
                <h2 class="text-xl font-semibold"><%= product.name %></h2>
                <p class="text-gray-600"><%= product.description %></p>
                <p class="text-green-500 font-semibold">$<%= product.price %></p>
                <a href="/products/<%= product.id %>" class="text-blue-500 mt-2 inline-block">View Details</a>
            </div>
            <% }) %>
        </div>

    </div>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white text-center py-4">
        <p>&copy; 2024 eCommerce App</p>
    </footer>
</body>

</html>